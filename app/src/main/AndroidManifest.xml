<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.framgia.humanresourcemanagement">

    <uses-sdk
        android:minSdkVersion="13"
        android:maxSdkVersion="23" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DepartmentActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.EmployeeActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.AddEmployeeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.InfoActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.EditEmployee"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.AddDepartment"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.EditDepartment"
            android:screenOrientation="portrait" />

    </application>

</manifest>
