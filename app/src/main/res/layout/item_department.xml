<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:weightSum="8">

    <TextView
        android:id="@+id/text_depart_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_layout_height"
        android:layout_weight="6"
        android:background="@color/colorEmployeeItem"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_padding_left"
        android:text="@string/title_department_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_title" />

    <Button
        android:id="@+id/button_edit_item_depart"
        android:layout_width="0dp"
        android:layout_height="@dimen/activity_layout_height"
        android:layout_weight="2"
        android:background="@android:color/white"
        android:text="@string/edit_depart_info"
        android:textSize="@dimen/text_size_15" />
</LinearLayout>